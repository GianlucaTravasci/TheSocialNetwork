<%- include('template/header') %>

<div class="container py-md-5 container--narrow">

  <%- include('template/flash') %>

  <%- include('template/profileShared') %>

  <div class="list-group">
    <% posts.forEach(function(post) { %>
      <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
        <img class="avatar-tiny" src="<%= post.author.avatar %>">
        <strong><%= post.title %></strong> on <%= post.data.getMonth() + 1 %>/<%= post.data.getDate() %>/<%= post.data.getFullYear() %>
      </a>
    <% }) %>
  </div>
</div>

<%- include('template/footer') %>